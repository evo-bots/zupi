---
format: hypermake.v0

targets:
  get-minit:
    description: download minit source code
    after:
      - toolchain
    cmds:
      - $HMAKE_PROJECT_DIR/hack/unpack-url.sh minit https://github.com/chazomaticus/minit/archive/b5eb46c1484d2625461fdf6354f41ac05039ca97.zip

  build-minit-[arch:amd64,armhf]:
    description: build minit
    after:
      - get-minit
    watches:
      - minit.build.sh
    cmds:
      - $HMAKE_PROJECT_DIR/deps/minit.build.sh $[arch]
