---
format: hypermake.v0

targets:
  get-openblas:
    description: download openblas
    after:
      - toolchain
    cmds:
      - $HMAKE_PROJECT_DIR/hack/unpack-url.sh openblas https://github.com/xianyi/OpenBLAS/archive/v0.2.19.tar.gz

  build-openblas-[arch:amd64,armhf]:
    description: build openblas
    after:
      - get-openblas
    watches:
      - openblas.build.sh
    env:
      - MAKE_OPTS
    cmds:
      - $HMAKE_PROJECT_DIR/deps/openblas.build.sh $[arch]
