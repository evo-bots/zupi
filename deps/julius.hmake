---
format: hypermake.v0

targets:
  get-julius:
    description: download julius
    after:
      - toolchain
    cmds:
      - $HMAKE_PROJECT_DIR/hack/unpack-url.sh julius https://github.com/julius-speech/julius/archive/v4.4.2.tar.gz

  build-julius-[arch:amd64,armhf]:
    description: build julius
    after:
      - build-zlib-$[arch]
      - get-julius
    watches:
      - julius.build.sh
    env:
      - MAKE_OPTS
    cmds:
      - $HMAKE_PROJECT_DIR/deps/julius.build.sh $[arch]
